<style>
@keyframes bounce {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.2); }
}

.confetti-container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
  pointer-events: none;
}

.confetti {
  position: absolute;
  width: 10px;
  height: 10px;
  background: #f0f;
  top: -10px;
  animation: confetti-fall 3s linear forwards;
}

.confetti:nth-child(1) { left: 10%; background: #ff6b6b; animation-delay: 0s; }
.confetti:nth-child(2) { left: 20%; background: #4ecdc4; animation-delay: 0.1s; }
